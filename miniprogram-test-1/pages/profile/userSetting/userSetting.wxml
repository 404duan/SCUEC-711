<view class="avatar">
    <!-- 如果只是展示用户头像昵称，可以使用 <open-data /> 组件 -->
    <!-- <open-data type="userAvatarUrl"></open-data> -->
    <!-- <open-data type="userNickName"></open-data> -->
    <image class="head-portrait" src="{{userInfo.avatarUrl}}" bindtap='upShopLogo'></image>
</view>

<!-- <view class='divider'></view> -->
<view class='cell'>
    <view class='cell-item'>
        <image style="height:50rpx;width:50rpx;margin-right: 50rpx;" src="../../../image/user2.png"></image>
        <text>{{nickname}}</text>
    </view>
    <!-- <view class="cell-item"><radio-group bindtap='upSex'><radio>男</radio><radio>女</radio></radio-group></view> -->
    <view class='cell-item arrow' bindtap="modifyAddress">
        <image style="height:50rpx;width:50rpx;" src="../../../image/site.png"></image>
        <text style="margin-right: 45%;">我的收货地址：</text>
    </view>
    <button class="logout" bindtap="logout" type="warn">退出登录</button>
</view>