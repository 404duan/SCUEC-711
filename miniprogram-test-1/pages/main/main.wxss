/* pages/main/main.wxss */

page
{
  background-color: #f0f0f0;
}

.search {
    text-align: left;
    display: inline-flex;
    flex-direction: row;
    padding: 5rpx;
}

text {
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
}

navigator {
    height: auto;
    width: auto;
    display: block;
}

.recomm {
    height: 100%;
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    padding-top: -19px;
}

.textRecom {
    margin-top: auto;
    margin-bottom: 0px;
    left: 0px;
    right: 0px;
    top: 0px;
    bottom: 0px;
    display: block;
    align-self: flex-start;
    width: 100%;
    height: 100rpx;
    padding-left: 20rpx;
    padding-top: 20rpx;
    background-color: rgba(66, 66, 66, 0.882353);
    color: rgb(255, 255, 255);
}

.goodsItem
{
  width:100%;
  height:233rpx;
  display: flex;
  flex-direction: row;
  margin-bottom: 10px;
  padding-left:20rpx;
  background-color: white;
}
.goodsItem image
{
  width:200rpx;
  height:100%;
  margin-right: 20rpx;
}